{
  "name": "island-app",
  "productName": "Island",
  "version": "3.7.0",
  "description": "Dynamic Island for windows",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --arch x64,ia32",
    "build": "electron-forge package && electron-builder build --win --publish never",
    "dist": "electron-forge package && electron-builder build --win",
    "publish": "electron-forge package && electron-builder build --win --publish always",
    "lint": "echo \"No linting configured\"",
    "check:source": "node scripts/check-conflicts-and-syntax.mjs"
  },
  "build": {
    "appId": "com.ali120b.island",
    "productName": "Island",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".vite/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Island",
      "uninstallDisplayName": "Island",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Ali120B",
        "repo": "Island"
      }
    ]
  },
  "keywords": [],
  "author": {
    "name": "Ali Bashmail",
    "email": "alibashmail2010@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ali120B/Island.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.5.0",
    "electron": "^38.7.2",
    "electron-builder": "^26.7.0",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@vitejs/plugin-react": "^4.5.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "groq-sdk": "^0.34.0",
    "lucide-react": "^0.563.0",
    "node-powershell": "^5.0.1",
    "openai": "^6.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0"
  }
}
